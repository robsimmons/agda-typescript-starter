{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "outDir": "build",
    "rootDirs": ["src", "agda/build"],
    "baseUrl": "src",
    "paths": { "*": ["../agda/build/*", "../agda/types/*"] },
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts", "agda/**/*.js"]
}
