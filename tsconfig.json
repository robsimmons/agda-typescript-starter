{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "baseUrl": ".",
    "rootDirs": ["src", "agda/build"],
    "paths": { "*" : [ "agda/build/*" ]},
    "strict": true,
    "esModuleInterop": true,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}