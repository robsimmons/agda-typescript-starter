{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDirs": ["src", "agda/build"],
    "baseUrl": "src",
    "paths": { "*": ["../agda/build/*"] },
    "strict": true,
    "esModuleInterop": true,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts"]
}
